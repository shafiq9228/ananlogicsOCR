<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:padding="@dimen/dimen_12dp">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Pick Image"        android:textColor="@color/black"        android:textSize="20sp"        android:textStyle="bold" />    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/imagesRv"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/dimen_12dp"        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"        app:spanCount="2" /></LinearLayout>